@model IEnumerable<SwimmingSchool_MVC.Models.PupilsEvent>

@{
    ViewData["Title"] = "Події учнів";
}

<h1 class="text-center my-4">Події учнів</h1>

<div class="container">
    <div class="row justify-content-center mb-4">
        <div class="col-md-8 text-end">
            <a asp-action="Create" class="btn btn-primary">Зареєструвати учня</a>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="row justify-content-center mb-3">
            <div class="col-md-8">
                <div class="p-3 rounded shadow-sm" style="background-color: #f8f9fa; border-left: 5px solid #007bff;">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-0">@item.Event.Name</h5>
                            <p class="mb-0"><b>Інформація:</b> @item.Info, <b>Результат:</b> @item.Result</p>
                            <p class="mb-0"><b>Учень:</b> @item.Pupils.FirstName @item.Pupils.LastName @item.Pupils.MiddleName</p>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Дії
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                                <li><a class="dropdown-item" asp-action="Edit" asp-route-pupilsId="@item.PupilsId" asp-route-eventId="@item.EventId">Редагувати</a></li>
                                <li><a class="dropdown-item" asp-action="Details" asp-route-pupilsId="@item.PupilsId" asp-route-eventId="@item.EventId">Деталі</a></li>
                                <li><a class="dropdown-item" asp-action="Delete" asp-route-pupilsId="@item.PupilsId" asp-route-eventId="@item.EventId">Видалити</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
