@model SwimmingSchool_MVC.Models.Event

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="~/css/Create.css" />
<h1>Edit</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Logo" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxPupilsAmount" class="control-label"></label>
                <input asp-for="MaxPupilsAmount" class="form-control" />
                <span asp-validation-for="MaxPupilsAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Locations" class="control-label"></label>
                <input asp-for="Locations" class="form-control" />
                <span asp-validation-for="Locations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Decree" class="control-label"></label>
                <input asp-for="Decree" class="form-control" />
                <span asp-validation-for="Decree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logo" class="control-label"></label>
                <input asp-for="Logo" type="file" class="form-control" accept="image/*">
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHeld" /> @Html.DisplayNameFor(model => model.IsHeld)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
